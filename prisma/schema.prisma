// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  username     String?  @unique
  password     String
  created_date DateTime @default(now())
  Folder       Folder[]
  File         File[]
}

model File {
  id          Int      @id @default(autoincrement())
  name        String
  uploader_id User     @relation(fields: [id], references: [id])
  upload_date DateTime @default(now())
  folder_id   Int      @default(0)
}

model Folder {
  id           Int      @id @default(autoincrement())
  name         String
  created_date DateTime @default(now())
  creator_id   User     @relation(fields: [id], references: [id])
  userId       Int
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
